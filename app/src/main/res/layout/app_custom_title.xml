<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:background="@color/app_title_background">

    <ImageView
        android:id="@+id/app_title_back"
        android:layout_width="@dimen/app_title_arrow_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/list_item_icon_padding"
        android:paddingEnd="@dimen/list_item_icon_padding"
        android:paddingTop="@dimen/app_title_back_padding"
        android:paddingBottom="@dimen/app_title_back_padding"
        android:contentDescription="@null"
        android:background="@drawable/app_title_back_bg"
        android:src="@drawable/app_title_back"/>

    <TextView
        android:id="@+id/app_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title_custom" />

    <TextView
        android:id="@+id/app_title_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_item_icon_padding"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/app_title_logout_text_size"
        android:visibility="gone"/>

</RelativeLayout>