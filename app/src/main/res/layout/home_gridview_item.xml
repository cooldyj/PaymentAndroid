<?xml version="1.0" encoding="utf-8"?>
<com.jerry.payment.mobile.widget.ColoredBorderLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jerry="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_grid_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_bg"
    jerry:borderThick="@dimen/colored_border_stroke"
    jerry:borderColor="@color/gray"
    android:gravity="center">

    <ImageView
        android:id="@+id/home_grid_icon"
        android:layout_width="@dimen/home_icon_height"
        android:layout_height="@dimen/home_icon_height"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/home_grid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_grid_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/home_text_margin"
        android:textSize="@dimen/home_button_size"
        android:textColor="@color/list_item_text_color"/>
</com.jerry.payment.mobile.widget.ColoredBorderLayout>