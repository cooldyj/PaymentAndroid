<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_dialog_result_height"
        android:gravity="center">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="@dimen/app_dialog_icon_width"
            android:layout_height="@dimen/app_dialog_icon_width"
            android:src="@drawable/app_dialog_smaile" />

        <TextView
            android:id="@+id/dialog_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dialog_icon"
            android:layout_alignTop="@id/dialog_icon"
            android:layout_marginStart="@dimen/service_transaction_content_padding"
            android:layout_toEndOf="@id/dialog_icon"
            android:gravity="center_vertical"
            android:text="Successful"
            android:textColor="@color/app_dialog_result_text"
            android:textSize="@dimen/app_dialog_result_text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_dialog_icon_width"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="50EUR"
        android:textSize="@dimen/app_dialog_result_text" />

    <LinearLayout
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_divider_height"
        android:background="@color/list_item_divider" />

    <TextView
        android:id="@+id/dialog_positive_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_dialog_positive_height"
        android:background="@drawable/app_dialog_positive_bg"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/app_dialog_positive_text"
        android:textSize="@dimen/app_dialog_button_text" />

</LinearLayout>