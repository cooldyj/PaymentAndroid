<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/service_transaction_item_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_transaction_item_height"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/me_login_input_margin"
        android:paddingStart="@dimen/me_login_input_margin">

        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/service_outflow"
            android:textColor="@color/list_item_text_color"
            android:textSize="@dimen/service_transaction_type" />

        <TextView
            android:id="@+id/transaction_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="-500EUR"
            android:textColor="@color/list_item_text_color"
            android:textSize="@dimen/service_transaction_type" />

        <TextView
            android:id="@+id/transaction_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/transaction_type"
            android:layout_centerVertical="true"
            android:text="Balance:600EUR"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/service_transaction_type" />

        <TextView
            android:id="@+id/transaction_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/transaction_type"
            android:layout_centerVertical="true"
            android:text="2016/07/25 17:10"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/service_transaction_type" />

    </RelativeLayout>

</RelativeLayout>