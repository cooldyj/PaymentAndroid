<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:background="@drawable/item_click_bg">


    <ImageView
        android:id="@+id/personal_list_item_img"
        android:layout_width="@dimen/list_item_icon_width"
        android:layout_height="@dimen/list_item_icon_width"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/list_item_icon_margin"
        android:contentDescription="@null"
        android:padding="@dimen/list_item_icon_padding" />

    <ImageView
        android:id="@+id/personal_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/me_personal_setting_margin"
        android:contentDescription="@null"
        android:src="@drawable/app_list_item_arrow" />


    <TextView
        android:id="@+id/personal_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/personal_item_arrow"
        android:layout_toEndOf="@id/personal_list_item_img"
        android:layout_marginEnd="@dimen/me_personal_setting_margin"
        android:layout_marginStart="@dimen/me_personal_setting_margin"
        android:ellipsize="middle"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/list_item_text_size"        />

</RelativeLayout>